  "scripts": {
    "preboot": "yarn clean",
    "boot": "tsc && rollup -c --silent",
    "bootstrap": "yarn boot && yarn build",
    "demo": "yarn --cwd demo",
    "dev": "tszip dev",
    "build": "tszip build",
    "test": "tszip test",
    "test:watch": "tszip test --watch",
    "test:coverage": "tszip test --coverage",
    "lint": "tszip lint",
    "prepare": "tszip build"
  },
  "module": "./dist/index.js",
  "exports": {
    "./package.json": "./package.json",
    ".": "./dist/index.js",
    "./*": "./dist/*/index.js"
